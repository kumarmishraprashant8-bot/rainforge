# RainForge Environment Variables
# ================================
# Copy this file to .env and fill in your values
# Owners: Prashant Mishra & Ishita Parmar

# ----------------------------------------
# Database Configuration
# ----------------------------------------
DATABASE_URL=postgresql://rainforge:rainforge123@localhost:5432/rainforge
TIMESCALE_URL=postgresql://rainforge:rainforge123@localhost:5433/rainforge_ts
REDIS_URL=redis://localhost:6379/0

# ----------------------------------------
# Authentication & Security
# ----------------------------------------
SECRET_KEY=your-super-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRY_HOURS=24
API_KEY_SENSOR=sensor-api-key-for-iot-devices

# ----------------------------------------
# External API Keys
# ----------------------------------------
# Indian Meteorological Department (for rainfall data)
IMD_API_KEY=your-imd-api-key

# OpenWeatherMap (for forecast)
OPENWEATHER_API_KEY=your-openweather-key

# Mapbox (for geocoding and maps)
MAPBOX_ACCESS_TOKEN=your-mapbox-token

# Google Geocoding (alternative to Mapbox)
GOOGLE_GEOCODING_API_KEY=your-google-key

# ----------------------------------------
# Object Storage (MinIO / S3)
# ----------------------------------------
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin123
MINIO_BUCKET=rainforge-files
MINIO_USE_SSL=false

# ----------------------------------------
# Celery Configuration
# ----------------------------------------
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# ----------------------------------------
# MQTT (IoT Sensor Data)
# ----------------------------------------
MQTT_BROKER_HOST=localhost
MQTT_BROKER_PORT=1883
MQTT_USERNAME=
MQTT_PASSWORD=

# ----------------------------------------
# ML Service
# ----------------------------------------
ML_SERVICE_URL=http://localhost:8001
ML_MODEL_VERSION=v1.0.0

# ----------------------------------------
# Feature Flags
# ----------------------------------------
ENABLE_ML_VERIFICATION=true
ENABLE_BULK_PROCESSING=true
ENABLE_IOT_MONITORING=true
ENABLE_MARKETPLACE=true

# ----------------------------------------
# Rate Limiting
# ----------------------------------------
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_BURST=20

# ----------------------------------------
# Logging
# ----------------------------------------
LOG_LEVEL=INFO
LOG_FORMAT=json

# ----------------------------------------
# CORS
# ----------------------------------------
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000,https://rainforge.app

# ----------------------------------------
# Email (for notifications)
# ----------------------------------------
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
EMAIL_FROM=noreply@rainforge.app

# ----------------------------------------
# SMS (Twilio for OTP)
# ----------------------------------------
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# ----------------------------------------
# Payment Gateway (Razorpay)
# ----------------------------------------
RAZORPAY_KEY_ID=
RAZORPAY_KEY_SECRET=

# ----------------------------------------
# Production Settings
# ----------------------------------------
# Set to 'production' in production
ENVIRONMENT=development
DEBUG=true
